html
  min-height: 100%
body
  margin: 0
  min-height: 100%

p
  margin: 0

input, select, textarea
  border: none
  outline: none
  padding: 0
  margin: 0

select
  appearance: none

textarea
  resize: none

h1, h2, h3, h4, h5, h6
  font-size: 1em
  font-weight: 400
  margin: 0
  padding: 0

button
  padding: 0
  border: none
  background: transparent
  outline: none
  cursor: pointer

ul, ol, li
  margin: 0
  padding: 0
  list-style: none

i, b
  list-style: none
  font-style: normal
a
  text-decoration: none
  &:focus
    text-decoration: none
  &:hover
    color: #ff527d
